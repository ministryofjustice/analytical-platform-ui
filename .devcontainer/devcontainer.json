{
  "name": "analytical-platform-ui",
  "image": "ghcr.io/ministryofjustice/devcontainer-base:latest",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22.18.0"
    },
    "ghcr.io/ministryofjustice/devcontainer-feature/astral:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "./features/src/postgresql": {},
    "ghcr.io/ministryofjustice/devcontainer-feature/aws:1": {},
    "ghcr.io/ministryofjustice/devcontainer-feature/container-structure-test:1": {},
    "ghcr.io/ministryofjustice/devcontainer-feature/kubernetes:1": {}
  },
  "initializeCommand": "bash .devcontainer/initialise.sh",
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "bash .devcontainer/post-start.sh",
  "containerEnv": {
    "UV_PROJECT_ENVIRONMENT": "/home/vscode/.venv"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "charliermarsh.ruff",
        "EditorConfig.EditorConfig",
        "GitHub.vscode-github-actions",
        "GitHub.vscode-pull-request-github",
        "ms-python.python",
        "ms-vsliveshare.vsliveshare"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${containerEnv:UV_PROJECT_ENVIRONMENT}/bin/python",
        "python.terminal.activateEnvInCurrentTerminal": true,
        "python.venvFolders": ["${containerEnv:UV_PROJECT_ENVIRONMENT}"]
      }
    }
  }
}
